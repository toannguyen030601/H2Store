@model asm1.Entities.NguoiDung
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/poly.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/asm1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <title</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
    @if (TempData["Message"] != null)
    {
        <script>
            alert("@TempData["Message"]");
        </script>
    }

</head>
<body>

    <div class="d-flex justify-content-center align-items-center h-100" style="background: linear-gradient(210deg, #ffffff, #000000);">

        <div style="width: 500px; height: 500px;">

            <a class="ms-auto d-flex justify-content-center text-decoration-none" href="@Url.Action("Index", "Home")">
                <img class="rounded-circle" src="~/images/products/logo.jpg" alt="" width="40px" height="40px">
                <h5 class="text-dark ms-2">H2 Store</h5>
            </a>
            <h1 class="text-center">ForgotPassword</h1>
            <form asp-action="Taotaikhoannd">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <label asp-for="TenNd" class="control-label"></label>
                    <input asp-for="TenNd" class="form-control" />
                    <span asp-validation-for="TenNd" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="TaiKhoanNd" class="control-label"></label>
                    <input asp-for="TaiKhoanNd" class="form-control" />
                    <span asp-validation-for="TaiKhoanNd" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="MatKhauNd" class="control-label"></label>
                    <input asp-for="MatKhauNd" class="form-control" type="password" />
                    <span asp-validation-for="MatKhauNd" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Sdt" class="control-label"></label>
                    <input asp-for="Sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DiaChi" class="control-label"></label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Tạo tài khoản" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>

